<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
            android:id="@+id/cvList"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:orientation="vertical"
                android:background="#FFE4E1"
                android:padding="10dp">

            <TextView
                    android:id="@+id/lbNipList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/lbNamaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama : ABC"/>

            <TextView
                    android:id="@+id/lbAlamatList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat : ABC"/>

            <TextView
                    android:id="@+id/lbNotelpList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notelp : 0000"/>

            <TextView
                    android:id="@+id/lbGenderList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin : Pria"/>

            <TextView
                    android:id="@+id/lbMapelList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mapel : Matematika"/>

            <TextView
                    android:id="@+id/lbHobiList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hobi : Membaca"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>
